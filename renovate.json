{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "ignorePresets": [
    ":ignoreModulesAndTests"
  ],
  "terraform": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "terraform",
        "terraform-version"
      ],
      "rangeStrategy": "pin",
      "pinDigests": true
    }
  ]
}
